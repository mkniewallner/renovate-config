{
  "extends": [
    "config:base",
    ":enablePreCommit",
    ":maintainLockFilesWeekly",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
    ":semanticCommitScope(deps)",
    ":semanticCommits",
    "regexManagers:dockerfileVersions"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchDepTypes": ["dev-dependencies"],
      "labels": ["dev-dependencies"]
    },
    {
      "matchLanguages": ["python"],
      "addLabels": ["python"]
    },
    {
      "matchLanguages": ["javascript"],
      "addLabels": ["javascript"]
    },
    {
      "matchManagers": ["dockerfile", "docker-compose"],
      "addLabels": ["docker"]
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github-actions"]
    },
    {
      "matchManagers": ["circleci"],
      "addLabels": ["circleci"]
    },
    {
      "matchLanguages": ["python"],
      "matchPackageNames": ["black"],
      "ignoreUnstable": false
    },
    {
      "matchManagers": ["pre-commit"],
      "matchPackageNames": ["psf/black"],
      "ignoreUnstable": false
    }
  ],
  "ignorePaths": [],
  "regexManagers": [
    {
      "description": "Update YAML files",
      "fileMatch": ["^.+\\.ya?ml$"],
      "matchStrings": [
        "\\s*: \"?(?<currentValue>.+?)\"?[[:blank:]]+#[[:blank:]]*renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)(?: lookupName=(?<lookupName>.+?))?(?: versioning=(?<versioning>[a-z\\d-]+?))?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "description": "Update pre-commit Python additional dependencies",
      "fileMatch": ["^.pre-commit-config.yaml$"],
      "matchStrings": [
        "\"(?<depName>[\\w-]+)(?<currentValue>.+?)\"[[:blank:]]+#[[:blank:]]*renovate: pre-commit-python-dependency\\s"
      ],
      "datasourceTemplate": "pypi"
    }
  ]
}

