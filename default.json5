{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base",
    ":automergeBranch",
    ":enablePreCommit",
    ":maintainLockFilesWeekly",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
    ":semanticCommitScope(deps)",
    ":semanticCommits",
    "regexManagers:dockerfileVersions",
    "regexManagers:githubActionsVersions",
  ],
  labels: ["dependencies"],
  packageRules: [
    {
      matchDepTypes: ["dev-dependencies"],
      labels: ["dev-dependencies"],
    },
    {
      matchLanguages: ["python"],
      addLabels: ["python"],
    },
    {
      matchLanguages: ["javascript"],
      addLabels: ["javascript"],
    },
    {
      matchManagers: ["dockerfile", "docker-compose"],
      addLabels: ["docker"],
    },
    {
      matchManagers: ["github-actions"],
      addLabels: ["github-actions"],
    },
    {
      matchManagers: ["circleci"],
      addLabels: ["circleci"],
    },
    {
      matchPackageNames: ["charliermarsh/ruff-pre-commit"],
      customChangelogUrl: "https://github.com/charliermarsh/ruff",
    },
  ],
  regexManagers: [
    {
      description: "Update PEP 440 Python dependencies",
      fileMatch: ["^(\\.pre-commit-config\\.yaml|pyproject\\.toml)$"],
      matchStrings: [
        '"(?<depName>[\\w-]+)(?<currentValue>.+?)",? +# renovate: pep440-python-dependency\\s',
      ],
      datasourceTemplate: "pypi",
    },
  ],
}
